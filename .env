# Host services (accessed via host.docker.internal from Docker)
WHISPER_URL=http://host.docker.internal:8178
OLLAMA_URL=http://host.docker.internal:11434
WHISPER_MODEL=ggml-large-v3.bin

# LLM
OLLAMA_MODEL=llama3.2:3b
LLM_SYSTEM_PROMPT=You are a helpful call center agent. Keep responses concise and conversational.
LLM_MAX_TOKENS=150

# TTS (Piper with two voice models: fast=low, quality=medium)
PIPER_URL=http://piper:5100
DEFAULT_TTS_ENGINE=fast

# Gateway
GATEWAY_PORT=8000
MAX_CONCURRENT_CALLS=100
ASR_POOL_SIZE=50
LLM_POOL_SIZE=50
TTS_POOL_SIZE=50

# VAD
VAD_SPEECH_THRESHOLD_DB=-30
VAD_SILENCE_TIMEOUT_MS=1000
VAD_MIN_SPEECH_MS=500

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
